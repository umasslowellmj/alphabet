<h1>Translated words</h1>
<div class="table-responsive">
  <table class="table table-bordered table-condensed">
    <thead>
      <tr>
        <th>Word</th>
        <th>Controls</th>
      </tr>
    </thead>
    <tbody>
      <% @eng_words.each do |eng_word| %>
        <% if eng_word.eng_word_translations.count != 0 %>
          <tr>
            <td><%= eng_word.word %></td>
            <td><%= link_to 'See translations', eng_word_path(eng_word) %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>

<h1>Untranslated words</h1>
<div class="table-responsive">
  <table class="table table-bordered table-condensed">
    <thead>
      <tr>
        <th>Word</th>
        <th>Controls</th>
      </tr>
    </thead>
    <tbody>
      <% @eng_words.each do |eng_word| %>
        <% if eng_word.eng_word_translations.count == 0 %>
          <tr>
            <td><%= eng_word.word %></td>
            <td><%= link_to 'Translate', new_eng_word_translations_path(:eng_word_id => eng_word.id) %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
